@model IEnumerable<BolsaTrabajoV1.Models.FORMACIONACADEMICA>

<h2 class="text-center">Formaciones Academicas</h2>

<p>
    @Html.ActionLink("Agregar", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.INSTITUCION)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TITULO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FECHAINICIOFORMACION)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FECHAFINFORMACION)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.TIPOFORMACINONACADEMICA.NOMBRETIPOFORMACION)
        </th>
        <th>Acciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.INSTITUCION)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TITULO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FECHAINICIOFORMACION)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FECHAFINFORMACION)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TIPOFORMACINONACADEMICA.NOMBRETIPOFORMACION)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.IDFORMACION }, new { @class = "btn btn-success fa fa-edit btn-xs" })
            @Html.ActionLink(" ", "Details", new { id = item.IDFORMACION }, new { @class = "btn btn-primary fa fa-search btn-xs" } ) 
            @Html.ActionLink(" ", "Delete", new { id = item.IDFORMACION }, new { @class = "btn btn-danger fa fa-trash btn-xs" })
        </td>
    </tr>
}

</table>
<a class="btn btn-danger" style="margin-top:5%" href='@Url.Action("MainCurriculum", "Curriculum")'>
    Regresar
</a>