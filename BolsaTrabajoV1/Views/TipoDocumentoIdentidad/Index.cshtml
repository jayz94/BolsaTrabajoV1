@model IEnumerable<BolsaTrabajoV1.Models.TIPO_DOCUMENTO_IDENTIDAD>

<h2 class="text-center">Tipos de Documentos de Identidad</h2>

<p>
    @Html.ActionLink("Agregar", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table" style="color:black;" data-toggle="table" datasrc="true" data-search="true"
 data-select-item-name="toolbar1" data-pagination="true" data-sort-name="NOMBREAREACONOCIMIENTO"
 data-sort-order="asc">
    <thead>
        <tr>
            <th data-field="NOMBREDOCUMENTOIDENTIDAD" data-sortable="true">
                @Html.DisplayNameFor(model => model.NOMBREDOCUMENTOIDENTIDAD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CANTIDADCARACTERES)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MASCARA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EXTRANJERO)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NOMBREDOCUMENTOIDENTIDAD)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CANTIDADCARACTERES)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MASCARA)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EXTRANJERO)
                </td>
                <td>
                    @Html.ActionLink(" ", "Edit", new { id = item.IDTIPODOCUMENTOIDENTIDAD }, new { @class = "btn btn-success fa fa-edit btn-xs" })
                    @Html.ActionLink(" ", "Details", new { id = item.IDTIPODOCUMENTOIDENTIDAD }, new { @class = "btn btn-primary fa fa-search btn-xs" })
                    @Html.ActionLink(" ", "Delete", new { id = item.IDTIPODOCUMENTOIDENTIDAD }, new { @class = "btn btn-danger fa fa-trash btn-xs" })
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-danger" style=" margin-left:40%" href='@Url.Action("MainCatalogos", "AdministracionCatalogos")'>
    <span class="fa fa-reply">&emsp; Regresar</span>
</a>


