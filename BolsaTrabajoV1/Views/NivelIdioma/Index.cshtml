@model IEnumerable<BolsaTrabajoV1.Models.NIVEL_IDIOMA>
<h2 class="text-center">Niveles de Idioma</h2>

<p>
    @Html.ActionLink("Agregar", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table" style="color:black;" data-toggle="table" datasrc="true" data-search="true"
       data-select-item-name="toolbar1" data-pagination="true" data-sort-name="NOMBREAREACONOCIMIENTO"
       data-sort-order="asc">
    <thead>
        <tr>
            <th data-field="NOMBRENIVELIDIOMA" data-sortable="true">
                @Html.DisplayNameFor(model => model.NOMBRENIVELIDIOMA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CODIGONIVELIDIOMA)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NOMBRENIVELIDIOMA)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CODIGONIVELIDIOMA)
                </td>
                <td>

                    @Html.ActionLink(" ", "Edit", new { id = item.IDNIVELIDIOMA }, new { @class = "btn btn-success fa fa-edit btn-xs" })
                    @Html.ActionLink(" ", "Details", new { id = item.IDNIVELIDIOMA }, new { @class = "btn btn-primary fa fa-search btn-xs" })
                    @Html.ActionLink(" ", "Delete", new { id = item.IDNIVELIDIOMA }, new { @class = "btn btn-danger fa fa-trash btn-xs" })
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-danger" style=" margin-left:40%" href='@Url.Action("MainCatalogos", "AdministracionCatalogos")'>
    <span class="fa fa-reply">&emsp; Regresar</span>
</a>


