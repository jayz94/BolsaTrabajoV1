            <ul>
                <li><a href='@Url.Action("filtrar", "Home",new { idTabla=4, idRegistro=6})'>TODOS</a></li>
                <li><a href='@Url.Action("filtrar", "Home",new { idTabla=4, idRegistro=1})'>$0  -- $500</a></li>
                <li><a href='@Url.Action("filtrar", "Home",new { idTabla=4, idRegistro=2})'>$500  -- $1000</a></li>
                <li><a href='@Url.Action("filtrar", "Home",new { idTabla=4, idRegistro=3})'>$1000  -- $1500</a></li>
                <li><a href='@Url.Action("filtrar", "Home",new { idTabla=4, idRegistro=4})'>$1500  -- $2000</a></li>
