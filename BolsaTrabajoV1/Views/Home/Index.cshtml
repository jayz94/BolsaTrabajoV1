            </ul>
        </li>
        <li class="yellow">
            <a href="#" class="icon-beaker">DEPARTAMENTO</a>
            <ul>
                @foreach (var departamento in ViewBag.departamentos)
            {
                    <li><a href='@Url.Action("filtrar", "Home",new { idTabla=5, idRegistro=departamento.IDDEPARTAMENTO})'>@departamento.NOMBREDEPARTAMENTO</a></li>
                }
