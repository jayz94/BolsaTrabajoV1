@model IEnumerable<BolsaTrabajoV1.Models.HABILIDAD>
<h2 class="text-center">Habilidades</h2>
<p>
    @Html.ActionLink("Agregar", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NOMBREHABILIDAD)
        </th>
        <th>
            Tipo Habilidad
        </th>
        <th>Acciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NOMBREHABILIDAD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TIPO_HABILIDAD.NOMBRETIPOHABILIDAD)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.IDHABILIDAD }, new { @class = "btn btn-success fa fa-edit btn-xs" })
            @* @Html.ActionLink(" ", "Details", new { id = item.IDHABILIDAD }, new { @class = "btn btn-primary fa fa-search btn-xs" } ) *@
            @Html.ActionLink(" ", "Delete", new { id = item.IDHABILIDAD }, new { @class = "btn btn-danger fa fa-trash btn-xs" })
        </td>
    </tr>
}

</table>
<a class="btn btn-danger" style="margin-top:5%" href='@Url.Action("MainCurriculum", "Curriculum")'>
    Regresar
</a>