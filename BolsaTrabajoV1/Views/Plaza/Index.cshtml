@model IEnumerable<BolsaTrabajoV1.Models.PLAZA>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Plazas</h2>

<p>
    @Html.ActionLink("Agregar", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.CARGO.NOMBRECARGO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DESCRIPCIONPLAZA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SALARIO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EDADMIN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ANIOSMINIMOXP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VACANTES)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MUNICIPIO.NOMBREMUNICIPIO)
        </th>
        <th>Acciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CARGO.NOMBRECARGO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DESCRIPCIONPLAZA)
        </td>
        <td>
            $@Html.DisplayFor(modelItem => item.SALARIO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EDADMIN)
            &nbsp;Años
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ANIOSMINIMOXP)
            &nbsp;Años
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VACANTES)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.MUNICIPIO.NOMBREMUNICIPIO)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.IDPLAZA }, new { @class = "btn btn-success fa fa-edit btn-xs" }) 
            @Html.ActionLink(" ", "Details", new { id = item.IDPLAZA }, new { @class = "btn btn-primary fa fa-search btn-xs" }) 
            @Html.ActionLink(" ", "Delete", new { id=item.IDPLAZA }, new { @class = "btn btn-danger fa fa-trash btn-xs" })
        </td>
    </tr>
}

</table>
