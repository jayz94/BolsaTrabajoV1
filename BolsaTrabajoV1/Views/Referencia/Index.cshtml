@model IEnumerable<BolsaTrabajoV1.Models.REFERENCIA>

<h2 class="text-center">Referencias</h2>

<p>
    @Html.ActionLink("Agregar", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TELEFONOREFERENCIA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PUESTOREFERENCIA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EMPRESAORIGENREFERENCIA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TIPOREFERENCIA.NOMBRETIPOREFERENCIA)
        </th>
        <th>Acciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TELEFONOREFERENCIA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PUESTOREFERENCIA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EMPRESAORIGENREFERENCIA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TIPOREFERENCIA.NOMBRETIPOREFERENCIA)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.IDREFERENCIA }, new { @class = "btn btn-success fa fa-edit btn-xs" })
            @Html.ActionLink(" ", "Details", new { id = item.IDREFERENCIA }, new { @class = "btn btn-primary fa fa-search btn-xs" } )
            @Html.ActionLink(" ", "Delete", new { id = item.IDREFERENCIA }, new { @class = "btn btn-danger fa fa-trash btn-xs" })
        </td>
    </tr>
}

</table>
<a class="btn btn-danger" style="margin-top:5%" href='@Url.Action("MainCurriculum", "Curriculum")'>
    Regresar
</a>
