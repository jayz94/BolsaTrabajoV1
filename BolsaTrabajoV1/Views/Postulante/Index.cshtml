@model IEnumerable<BolsaTrabajoV1.Models.ViewPostulante>

<h2 class="text-center">Postulantes</h2>

<link rel="stylesheet" href="assets/css/styles.css" />
<nav id="colorNav">
    <ul>
        <li class="green" >
            <a href="#" >DEPARTAMENTO</a>
            <ul>
                <li><a href='@Url.Action("FiltrarPostulante", "Postulante",new { idTabla=0, idRegistro=0})'>TODOS</a></li>
                @foreach (var departamento in ViewBag.departamentos)
                {
                    <li><a href='@Url.Action("FiltrarPostulante", "Postulante",new { idTabla=1, idRegistro=departamento.IDDEPARTAMENTO})'>@departamento.NOMBREDEPARTAMENTO</a></li>
                }
            </ul>
        </li>
        <li class="blue">
            <a href="#" class="icon-beaker">IDIOMA</a>
            <ul>
                <li><a href='@Url.Action("FiltrarPostulante", "Postulante",new { idTabla=0, idRegistro=0})'>TODOS</a></li>
                @foreach (var idioma in ViewBag.idiomas)
            {
                    <li><a href='@Url.Action("FiltrarPostulante", "Postulante",new { idTabla = 2, idRegistro = idioma.IDIDIOMA })'>@idioma.NOMBREIDIOMA</a></li>
                }
            </ul>
        </li>
        <li class="yellow">
            <a href="#" class="icon-beaker">AREA CONOCIMIENTO</a>
            <ul>
                <li><a href='@Url.Action("FiltrarPostulante", "Postulante",new { idTabla=0, idRegistro=0})'>TODOS</a></li>
                @foreach (var areaCo in ViewBag.areasConocimiento)
            {
                    <li><a href='@Url.Action("FiltrarPostulante", "Postulante",new { idTabla = 3, idRegistro = areaCo.IDAREACONOCIMIENTO })'>@areaCo.NOMBREAREACONOCIMIENTO</a></li>
                }
            </ul>
        </li>
        <li class="blue">
            <a href="#" class="icon-beaker">TIPO HABILIDAD</a>
            <ul>
                <li><a href='@Url.Action("FiltrarPostulante", "Postulante",new { idTabla=0, idRegistro=0})'>TODOS</a></li>
                @foreach (var tipoHabilidad in ViewBag.tiposHabilidades)
            {
                    <li><a href='@Url.Action("FiltrarPostulante", "Postulante",new { idTabla = 4, idRegistro = tipoHabilidad.IDTIPOHABILIDAD })'>@tipoHabilidad.NOMBRETIPOHABILIDAD</a></li>
                }
            </ul>
        </li>


        <li class="yellow">
            <a href="#" class="icon-beaker">TIPO FORMACION ACADEMICA</a>
            <ul>
                <li><a href='@Url.Action("FiltrarPostulante", "Postulante",new { idTabla=0, idRegistro=0})'>TODOS</a></li>
                @foreach (var tipoFor in ViewBag.tiposFormaciones)
            {
                    <li><a href='@Url.Action("FiltrarPostulante", "Postulante",new { idTabla = 5, idRegistro = tipoFor.IDTIPOFORMACION })'>@tipoFor.NOMBRETIPOFORMACION</a></li>
                }
            </ul>
        </li>
        <li class="purple">
            <a href="#" class="icon-envelope">GÉNERO</a>
            <ul>
                <li><a href='@Url.Action("FiltrarPostulante", "Postulante",new { idTabla=0, idRegistro=0})'>TODOS</a></li>
                @foreach (var genero in ViewBag.generos)
            {
                    <li><a href='@Url.Action("FiltrarPostulante", "Postulante",new { idTabla=6, idRegistro=genero.IDGENERO})'>@genero.DESCRIPCIONGENERO</a></li>
                }
            </ul>
        </li>
    </ul>
</nav>

<table class="table" style="margin-top:3%">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.genero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Edad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.municipio)
        </th>
        <th>Acciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre) 
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.genero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Edad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.municipio)
        </td>
        <td>
            @*@Html.ActionLink(" ", "Edit", new { id = item.IDAREACONOCIMIENTO }, new { @class = "btn btn-success fa fa-edit btn-xs" })*@
            @Html.ActionLink(" ", "Details", new { id = item.idpostulante }, new { @class = "btn btn-primary fa fa-search btn-xs" } ) 
        </td>
    </tr>
}

</table>


<style>
    /*-------------------------
        Simple reset
    --------------------------*/
    * {
        margin: 0;
        padding: 0;
    }
    /*-------------------------
        General Styles
    --------------------------
    html{
        background:url('../img/background.jpg') #fefefe;
        position:relative;
    }

    body{
        padding: 200px 0 0;
        font:14px/1.3 'Segoe UI',Arial, sans-serif;
        min-height:500px;
    }
    */

    a, a:visited {
        text-decoration: none;
        outline: none;
        color: #54a6de;
    }

        a:hover {
            text-decoration: underline;
        }

    section, footer, nav {
        display: block;
    }


    /*----------------------------
        The Navigation Menu
    -----------------------------*/


    #colorNav > ul {
        width: 95%; /* Increase when adding more menu items */
        margin: 0 auto;
    }

        #colorNav > ul > li { /* will style only the top level li */
            list-style: none;
            box-shadow: 0 0 10px rgba(100, 100, 100, 0.2) inset,1px 1px 1px #CCC;
            display: inline-block;
            line-height: 1;
            margin: 1px;
            border-radius: 3px;
            position: relative;
        }

            #colorNav > ul > li > a {
                color: inherit;
                text-decoration: none !important;
                font-size: 15px;/*tamaño de letra */
                padding-left:4px;
                padding-right:4px;
            }

    #colorNav li ul {
        position: absolute;
        list-style: none;
        text-align: center;
        width: 180px;
        left: 50%;
        margin-left: -90px;
        top: 5px;/* top para el despliegue de las opciones*/
        font: bold 12px 'Open Sans Condensed', sans-serif;
        /* This is important for the show/hide CSS animation */
        max-height: 0px;
        overflow: hidden;
        -webkit-transition: max-height 0.4s linear;
        -moz-transition: max-height 0.4s linear;
        transition: max-height 0.4s linear;
    }

        #colorNav li ul li {
            background-color: #313131;
        }

            #colorNav li ul li a {
                padding: 12px;
                color: #fff !important;
                text-decoration: none !important;
                display: block;
            }

            #colorNav li ul li:nth-child(odd) { /* zebra stripes */
                background-color: #363636;
            }

            #colorNav li ul li:hover {
                background-color: #444;
            }

            #colorNav li ul li:first-child {
                border-radius: 3px 3px 0 0;
                margin-top: 25px;
                position: relative;
            }
                /*menu desplegable secundario*/
                #colorNav li ul li:first-child:before { /* the pointer tip */
                    content: '';
                    position: absolute;
                    width: 1px;
                    height: 1px;
                    border: 5px solid transparent;
                    border-bottom-color: #313131;
                    left: 50%;
                    top: 0px;
                    margin-left: -5px;
                }

            #colorNav li ul li:last-child {
                border-bottom-left-radius: 3px;
                border-bottom-right-radius: 3px;
            }
    /* This will trigger the CSS */
    /* transition animation on hover */
    #colorNav li:hover ul {
        max-height: 500px; /* Increase when adding more dropdown items */
    }
    /*----------------------------
        Color Themes
    -----------------------------*/
    #colorNav li.green {
        /* This is the color of the menu item */
        background-color: #00c08b;
        /* This is the color of the icon */
        color: #127a5d;
        padding:7px;
    }

    #colorNav li.red {
        background-color: #ea5080;
        color: #aa2a52;
        padding:7px;
    }

    #colorNav li.blue {
        background-color: #53bfe2;
        color: #2884a2;
        padding:7px;
    }

    #colorNav li.yellow {
        background-color: #f8c54d;
        color: #ab8426;
        padding:7px;
    }

    #colorNav li.purple {
        background-color: #df6dc2;
        color: #9f3c85;
        padding:7px;
    }

    /*----------------------------
        The Footer
    -----------------------------*/
    footer {
        background-color: #111111;
        bottom: 0;
        box-shadow: 0 -1px 2px #111111;
        height: 45px;
        left: 0;
        position: fixed;
        width: 100%;
        z-index: 100000;
    }

        footer h2 {
            color: #EEEEEE;
            font-size: 14px;
            font-weight: normal;
            left: 50%;
            margin-left: -400px;
            padding: 13px 0 0;
            position: absolute;
            width: 540px;
        }

            footer h2 i {
                font-style: normal;
                color: #888;
            }

        footer a.tzine, a.tzine:visited {
            color: #999999;
            font-size: 12px;
            left: 50%;
            margin: 16px 0 0 110px;
            position: absolute;
            text-decoration: none;
            top: 0;
        }

        footer a i {
            color: #ccc;
            font-style: normal;
        }

            footer a i b {
                color: #c92020;
                font-weight: normal;
            }
</style>
