@model IEnumerable<BolsaTrabajoV1.Models.LOGRO>

<h2 class="text-center">Logros</h2>

<p>
    @Html.ActionLink("Agregar", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FECHALOGRO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OTORGANTELOGRO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DESCRIPCIONLOGRO)
        </th>
        <th>Acciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FECHALOGRO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OTORGANTELOGRO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DESCRIPCIONLOGRO)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.IDLOGRO }, new { @class = "btn btn-success fa fa-edit btn-xs" })
            @Html.ActionLink(" ", "Details", new { id = item.IDLOGRO }, new { @class = "btn btn-primary fa fa-search btn-xs" } )
            @Html.ActionLink(" ", "Delete", new { id = item.IDLOGRO }, new { @class = "btn btn-danger fa fa-trash btn-xs" })
        </td>
    </tr>
}

</table>
<a class="btn btn-danger" style="margin-top:5%" href='@Url.Action("MainCurriculum", "Curriculum")'>
    Regresar
</a>