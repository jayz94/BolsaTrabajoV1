@model IEnumerable<BolsaTrabajoV1.Models.ROL>

<p>
    @Html.ActionLink("Agregar", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NOMBREROL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ACTIVO)
        </th>
        <th>Menus</th>
        <th>Acciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NOMBREROL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ACTIVO)
        </td>
        <td>
            @{
                foreach (var menu in item.MENU)
                {
                    @menu.IDMENU @: @menu.NOMBREMENU <br />
                }
            }
        </td>

        <td>@Html.ActionLink(" ", "Edit", new { id = item.IDROL }, new { @class = "btn btn-success fa fa-edit btn-xs" })
        @Html.ActionLink(" ", "Details", new { id = item.IDROL }, new { @class = "btn btn-primary fa fa-search btn-xs" } )
        @Html.ActionLink(" ", "Delete", new { id = item.IDROL }, new { @class = "btn btn-danger fa fa-trash btn-xs" })
        </td>
    </tr>
}

</table>
